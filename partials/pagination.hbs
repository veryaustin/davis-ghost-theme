<nav class="pagination">
  {{#if prev}}
    <a href="{{page_url prev}}">
    <i class="fa fa-chevron-left" aria-hidden="true"></i> Prev</a>
    <span class="separator">|</span>
  {{/if}}
  <span class="page-number">Page {{page}} of {{pages}}</span>
  <span class="separator">|</span>
  {{#if next}}
    <a href="{{page_url next}}">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
  {{/if}}
</nav>
